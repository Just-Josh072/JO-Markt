@page
@model RegisterModel
@{
    ViewData["Title"] = "Aanmelden";
    ViewData["Footer"] = "no";
}

<div class="registration">
    <div class="col-md-4 col-md-contact">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="text-center">Nieuw hier?</h1>
            <h5 class="text-center">Een profiel aanmaken is zo gebeurd.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-form-1">
                <div class="form-group gender-group">
                    <div class="gender-form">
                        <label asp-for="Input.Geslacht" class="gender-label">Dhr.</label>
                        <input type="radio" asp-for="Input.Geslacht" value="Male" />
                        <label asp-for="Input.Geslacht" class="gender-label">Mevr.</label>
                        <input type="radio" asp-for="Input.Geslacht" value="Female" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Voornaam">Voornaam</label>
                    <input asp-for="Input.Voornaam" class="form-control" />
                    <label asp-for="Input.Achternaam">Achternaam</label>
                    <input asp-for="Input.Achternaam" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.Straat">Straatnaam / Bezorg Adres</label>
                    <input asp-for="Input.Straat" class="form-control" />
                    <label asp-for="Input.Huisnummer">Huisnummer</label>
                    <input asp-for="Input.Huisnummer" class="form-control" />
                </div>
            </div>
            <div class="col-form-1">

                <div class="form-group">
                    <label asp-for="Input.Postcode">Postcode</label>
                    <input asp-for="Input.Postcode" class="form-control" />
                    <label asp-for="Input.PhoneNumber">Telefoonnummer</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.Geboortedatum">Geboortedatum</label>
                    <input asp-for="Input.Geboortedatum" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Wachtwoord(Het wachtwoord moet minimaal 1 getal en 1 Hoofdletter bevatten.)</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Herhaal wachtwoord</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-submit btn-primary ">Aanmelden</button>
            </div>
            <div class="col-form-2">
                <hr />
                <p>Heeft u al een JO-Markt profiel? Hier kunt u <a class="" asp-page="/Account/Login">Inloggen</a>.</p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}