@model IEnumerable<JOMarkt.Models.CategoryViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categiories</h1>


<p>
    <a asp-action="LoadXMLCategories">load cat</a>
</p>

<br>
<br>

<script>
function scrollWin() {
  window.scrollBy(0, 10000);
}
</script>
<script>
    function scrollWin2() {
        window.scrollBy(0, -10000);
    }
</script>
<table class="table">
   
    <tbody>
        <ul id="myRow" class="row justify-content-start">
            @foreach (var item in Model)
            {

                <li class="collum" style="list-style-type:none;">
                    <a asp-action="Details" asp-route-id="@item.CategorieId" style="text-decoration: none;">
                        <div class="card" id="catcard" style="width: 18rem;">
                            <div style="width:100%; text-align:center; align-content:center;">
                                <img class="productfoto" style="margin-top:20px;" src="@item.Image">
                               
                            </div>
                            <div class="card-body" style="text-align:center; margin-bottom:70px; height:0px;">
                                <p class="producttitel" style="color:black;">
                                    <br />
                                    @Html.DisplayFor(modelItem => item.Name)
                                </p>
                               
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </tbody>
</table>

