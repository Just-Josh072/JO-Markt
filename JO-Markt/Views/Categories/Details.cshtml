@model JOMarkt.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div>
        <h4>Categorie @Html.DisplayFor(model => model.Name)</h4>

        <img class="card-img" style="height:600px" src="@Model.Image">

    </div>


@foreach (var item in Model.subcategories)
{

    <li class="collum" style="list-style-type:none;">

        <div class="card1" id="catcard" style="width: 100%;">
            <div style="width:100%; text-align:center;">
              
            </div>
            <div class="card-body" style="text-align:center;">
                <p class="card-text" style="color:white;">
                    <br />

                    <br />
                    @Html.DisplayFor(modelItem => item.Name)
                </p>

            </div>
        </div>
    </li>
    <div class="row">
        @foreach (var product in item.Products)
        {

            // <li class="collum" style="list-style-type:none;">

            <div class="card" style="width: 18rem; left:110px;">

                <div class="card" style="text-align:center;">
                    <p class="card" style="color:black; text-align:center;">
                        <br />

                        <br />
                        @Html.DisplayFor(modelItem => product.Title)
                        <img class="card-img" style="height:100%; width:90%;" src="@product.Image">
                    <p class="price">&euro;@Html.DisplayFor(modelItem => product.Price)</p>
                    <a asp-action="AddToCart" class="btn btn-success btn-block" asp-route-id="@product.Id">In winkelwagen</a>
                    </p>

                </div>
            </div>
            //</li>
        }
    </div>
}
