@model IEnumerable<JOMarkt.Models.CartItemViewModel>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cart</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                ProductId
            </th>
            <th>
                Prijs
            </th>
            <th>
               Naam
            </th>
            <th>
               Afbeelding
            </th>
            <th>
                Aantal
            </th>
            <th>
                Totaal prijs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.ImageUrl" height="64" />

                </td>
                <td>
                    <form asp-action="IncreaseAmount">
                        <input type="text" name="Amount" class="form-control" style="width:20%;" value="@Html.DisplayFor(modelItem => item.Amount)" />
                        <input type="hidden" name="ProductId" value="@Html.DisplayFor(modelItem => item.ProductId)" />
                        <input type="submit" style="position: absolute; left: -9999px" />
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.ProductId">Yeetus</a>
                </td>
            </tr>
        }
    </tbody>
    </table>

    <a class="btn btn-primary text-light" asp-action="Index" asp-controller="Checkout">Checkout</a>

